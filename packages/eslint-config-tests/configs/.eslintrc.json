{
  "parser": "babel-eslint",
  "plugins": [
    "prettier",
    "import",
    "unicorn",
    "react",
    "jsx-a11y"
  ],
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.test.jsx"
      ],
      "extends": [
        "@sanv/eslint-config-base",
        "@sanv/eslint-config-react",
        "@sanv/eslint-config-tests",
        "@sanv/eslint-config-unicorn",
        "@sanv/eslint-config-import",
        "plugin:prettier/recommended",
        "prettier/react"
      ]
    },
    {
      "files": [
        "**/*.story.js",
        "**/*.story.jsx",
        "**/*.stories.js",
        "**/*.stories.jsx"
      ],
      "extends": [
        "@sanv/eslint-config-base",
        "@sanv/eslint-config-react",
        "@sanv/eslint-config-unicorn",
        "@sanv/eslint-config-import",
        "plugin:prettier/recommended",
        "prettier/react"
      ]
    },
    {
      "files": [
        "./src/**/*.js",
        "./src/**/*.jsx"
      ],
      "extends": [
        "@sanv/eslint-config-base",
        "@sanv/eslint-config-react",
        "@sanv/eslint-config-unicorn",
        "@sanv/eslint-config-import",
        "plugin:prettier/recommended",
        "prettier/react"
      ]
    }
  ]
}
