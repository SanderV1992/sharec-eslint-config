{
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.test.jsx"
      ],
      "extends": [
        "@sanv/eslint-config-unicorn"
      ]
    },
    {
      "files": [
        "**/*.story.js",
        "**/*.story.jsx",
        "**/*.stories.js",
        "**/*.stories.jsx"
      ],
      "extends": [
        "@sanv/eslint-config-unicorn"
      ]
    },
    {
      "files": [
        "./src/**/*.js",
        "./src/**/*.jsx"
      ],
      "extends": [
        "@sanv/eslint-config-unicorn"
      ]
    }
  ]
}
